<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/linechartlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="385dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">


            <RelativeLayout
                android:id="@+id/linechartlayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/naver1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/nav"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="N"
                            android:textColor="#32CD32"
                            android:textSize="17dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/naver2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/nav"
                            android:padding="10dp"
                            android:text=" 매물 보러가기"
                            android:textSize="13dp"
                            android:textStyle="bold">

                        </TextView>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/part"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/naver1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/part1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        app:cardBackgroundColor="@color/On_Btcolor"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/part1_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:text="거래내역"
                            android:textColor="@color/On_Textwcolor"

                            android:textSize="@dimen/Linechartbtn"
                            android:textStyle="bold">

                        </TextView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/part2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/part2_t"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:text="거래건수"
                            android:textColor="@color/Off_Textcolor"
                            android:textSize="@dimen/Linechartbtn"
                            android:textStyle="bold">

                        </TextView>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/typelinear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/part">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Linecharttype1"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"

                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/Linecharttext1"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:text="최근3년간"
                            android:textColor="@color/Off_Textcolor"
                            android:textSize="@dimen/Linechartbtn"
                            android:textStyle="bold">

                        </TextView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Linecharttype2"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"

                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/Linecharttext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:text="최근5년간"
                            android:textColor="@color/Off_Textcolor"
                            android:textSize="@dimen/Linechartbtn"
                            android:textStyle="bold">

                        </TextView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Linecharttype3"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"

                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/Linecharttext3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:text="최근10년간"
                            android:textColor="@color/Off_Textcolor"
                            android:textSize="@dimen/Linechartbtn"
                            android:textStyle="bold">

                        </TextView>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/Linecharttype100"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.5"
                        app:cardBackgroundColor="@color/On_Btcolor"

                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/Linecharttext100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:text="전체기간"
                            android:textColor="@color/On_Textwcolor"
                            android:textSize="@dimen/Linechartbtn"
                            android:textStyle="bold">

                        </TextView>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@+id/typelinear" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/infortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/linechartlayout">

        <TextView
            android:id="@+id/chartymd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/lineclor"
            android:textSize="@dimen/charsize"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/chartpirce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chartymd"
            android:textColor="@color/lineclor"
            android:textSize="@dimen/charsize"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/chartgunsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chartpirce"
            android:textColor="@color/lineclor"
            android:textSize="@dimen/charsize"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>
</RelativeLayout>